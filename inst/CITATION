citHeader("To cite plotKML in publications use:")

citEntry(entry = "Article",
  title        = "{plotKML}: Scientific Visualization of Spatio-Temporal Data",
  author       = personList(as.person("Tomislav Hengl"),
                   as.person("Pierre Roudier"),
                   as.person("Dylan Beaudette"),
                   as.person("Edzer Pebesma")),
  journal      = "Journal of Statistical Software",
  year         = "2015",
  volume       = "63",
  number       = "5",
  pages        = "1--25",
  url          = "http://www.jstatsoft.org/v63/i05/",

  textVersion  =
  paste("Tomislav Hengl, Pierre Roudier, Dylan Beaudette, Edzer Pebesma (2015).",
        "plotKML: Scientific Visualization of Spatio-Temporal Data.",
        "Journal of Statistical Software, 63(5), 1-25.",
        "URL http://www.jstatsoft.org/v63/i05/.")
)

